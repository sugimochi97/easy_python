RUN echo 'left_prompt() {' >> ~/.bashrc && \
    echo '    local user="\[\033[0;32m\]\uðŸŽ\[\033[0m\]"' >> ~/.bashrc && \
    echo '    local dir="\[\033[0;93m\][\w]\[\033[0m\]"' >> ~/.bashrc && \
    echo '    local next="\[\033[0;36m\]>\[\033[0m\] "' >> ~/.bashrc && \
